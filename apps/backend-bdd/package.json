{
  "name": "backend-bdd",
  "version": "1.0.0",
  "description": "E2E tests for Spenicle API using Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "generate:types": "tsx scripts/generate-openapi-types.ts",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "openapi-typescript": "^7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
