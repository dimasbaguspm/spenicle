# Example Environment Variables
# Copy this file to .env.dev or .env.prod and fill in your values

# Node Environment
NODE_ENV=development

# API Configuration
API_PORT=3000
API_STAGE=development
API_JWT_SECRET=your_jwt_secret_key_here

# Database Configuration
API_PGHOST=postgres
API_PGUSER=postgres
API_PGPASSWORD=postgres
API_PGDATABASE=spenicle
API_PGPORT=5432
API_PGDATA=/var/lib/postgresql/data
API_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/spenicle

# Web Configuration
WEB_PORT=8080
WEB_STAGE=development
VITE_API_BASE_URL=http://localhost:3000/api

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=spenicle
